{% extends 'base.html.twig' %}

{% block navigation %}
    <nav class="navbar navbar-default navbar-static">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".js-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('app_home_home') }}" style="padding:15px 15px;">Test shop</a>
            </div>
            <div class="collapse navbar-collapse js-navbar">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('app_home_about') }}">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <div class="col-xs-2">
        <h4>Size</h4>
        {% for modification in product.modifications %}
            <div class="funkyradio">
                <div class="funkyradio-success">
                    <input type="radio" name="radio" data-url="{{ path('show_modification', {id: product.id, modificationId: modification.id}) }}" id="{{ modification.id }}" value="{{ modification.id }}" />
                    {#<input type="radio" name="radio" id="{{ modification.id }}" value="{{ modification.id }}" />#}
                    <label for="{{ modification.id }}">{{ modification.size }} {{ modification.color }}</label>
                </div>
            </div>
        {% endfor %}

        <div class="col-xs-12">
            <hr>
        </div>
    </div>
{% endblock %}
{% block footer %}
