{% extends 'layout.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="col-xs-3">
        <div class="block">
            <div class="product">
                <img src="{{ asset('/assets/images/product.png') }}">
            </div>
            <div class="text-center text-info">
                <h3>{{ product.name }}</h3>
            </div>
        </div>
    </div>
    <div class="col-xs-4">
        <div class="info">
            <span class="description">
                <div id="specification" hidden="true">
                    <h5>Specification</h5>
                    <ul>
                        <li id="vendoreCode"></li>
                        <li id="color"></li>
                        <li id="size"></li>
                    </ul>
                </div>

                <h5>Description</h5>
                <p>test item description</p>
            </span>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="info">
            <div class="top-buffer">
                <h4>Price:</h4>
                <span class="price">${{ product.price }}</span>
            </div>
        </div>
        <div id="buyNow" hidden="true" >
            <a class="buy_now" href="#">Buy Now</a>
        </div>
    </div>
{% endblock %}